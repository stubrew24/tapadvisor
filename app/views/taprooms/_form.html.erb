<div class="row">
  <div class="col-md-3"></div>
    <div class="col-md-6 text-center">
      <%= form_for(@taproom) do |f| %>

        <div class="form-group">
          <%= f.label :brewery %><br />
          <%= f.text_field :brewery, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :location %><br />
          <%= f.text_field :location, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :opening_times %><br />
          <%= f.text_field :opening_times, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :bio %><br />
          <%= f.text_area :bio, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :img_url %><br />
          <%= f.text_field :img_url, class: "form-control" %>
        </div>

        <%= f.submit class: "btn btn-primary"%>

      <% end %>
    </div>
  <div class="col-md-3"></div>
</div>
