<% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
<% end %>

<div class="row">
  <div class="col-md-3"></div>
    <div class="col-md-6 text-center">
    <%= form_for(@review) do |f| %>

      <div class="form-group">
        <%= f.label :comment %><br />
        <%= f.text_area :comment, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :rating %><br />
          <%= f.radio_button :rating, 1, class: "form-check-input", id: "inlineRadio1" %><label class="form-check-label" for="inlineRadio1"> 1 &nbsp; &nbsp; &nbsp;</label>
          <%= f.radio_button :rating, 2, class: "form-check-input", id: "inlineRadio2" %><label class="form-check-label" for="inlineRadio2"> 2 &nbsp; &nbsp; &nbsp;</label>
          <%= f.radio_button :rating, 3, class: "form-check-input", id: "inlineRadio3" %><label class="form-check-label" for="inlineRadio3"> 3 &nbsp; &nbsp; &nbsp;</label>
          <%= f.radio_button :rating, 4, class: "form-check-input", id: "inlineRadio4" %><label class="form-check-label" for="inlineRadio4"> 4 &nbsp; &nbsp; &nbsp;</label>
          <%= f.radio_button :rating, 5, class: "form-check-input", id: "inlineRadio5" %><label class="form-check-label" for="inlineRadio5"> 5</label>
      </div>

      <div class="form-group">
        <%= f.label :visit_date %><br />
        <%= f.date_field :visit_date, class: "form-control" %>
      </div>

      <%= f.hidden_field :taproom_id, value: @taproom.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit class: "btn btn-primary"%>

    <% end %>

  <div class="col-md-3"></div>
</div>
