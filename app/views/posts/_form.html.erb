<div class="row">
  <div class="col-md-3"></div>
    <div class="col-md-6 text-center">
      <%= form_for(@post) do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :content %><br>
          <%= f.text_area :content, class: "form-control", 'style': "height: 300px" %>
        </div>

        <%= f.hidden_field :taproom_id, value: @taproom.id %>

        <%= f.submit class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
