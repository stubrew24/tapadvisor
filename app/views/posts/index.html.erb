
<h1><%= current_user.taproom.brewery %> POSTS</h1>
<ul class="nav nav-tabs card-margin">
  <li class="nav-item">
    <a class="nav-link active" href="<%= posts_path %>">All</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="<%= new_post_path %>">New</a>
  </li>
</ul>
<% if @posts.any? %>
  <% @posts.each do |post| %>
  <div class="card card-margin">
    <div class="card-header">
      <strong><%= link_to post.title, post_path(post) %></strong><%= "  (unpublished)" if !post.published %>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <%= post.content[0..300] %><%= "..." if post.content.length > 300 %>
        <footer class="blockquote-footer">Created: <%= human_date(post.created_at) %></footer>
      </blockquote>
    </div>
  </div>
  <% end %>
<% end %>
